<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/device_card"
        android:layout_margin="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
            android:padding="8dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <TextView
                tools:text="Name Foo Bar"
                android:id="@+id/name"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:fontFamily="sans-serif"/>


        <TextView
                android:layout_below="@id/name"
                tools:text="MY:MA:C0:FO:OB:AR"
                android:id="@+id/address"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"/>

        <TextView
                android:layout_below="@id/address"
                tools:text="-100db"
                android:id="@+id/rssi"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"/>

            <TextView
                android:id="@+id/type"
                tools:text="Type"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:fontFamily="sans-serif-light"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/bondstate"
                tools:text="Bond state"
                android:layout_below="@id/type"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:fontFamily="sans-serif-light"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>


            <TextView
                    android:id="@+id/last_seen"
                    tools:text="Type"
                    android:layout_below="@id/bondstate"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:fontFamily="sans-serif-light"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"/>


            <TextView
                    android:id="@+id/scan_record"
                    tools:text="00112200003030300030300403400"
                    android:layout_below="@id/last_seen"
                android:fontFamily="sans-serif-light"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>